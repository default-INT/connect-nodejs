{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "strictPropertyInitialization": false,
    "target": "es6",
    "rootDir": "./",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./build",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "config": ["config/*"],
      "services": ["src/services/"],
      "services/*": ["src/services/*"],

      "storage": ["src/storage"],
      "storage/*": ["src/storage/*"],

      "shared": ["src/shared/*"]
    }
  }
}
